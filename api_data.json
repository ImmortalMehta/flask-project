{
  "api_version": "2.0",
  "message": "Welcome to the Enhanced Flask MongoDB API",
  "status": "active",
  "environment": "production",
  "endpoints": {
    "form": {
      "method": "GET",
      "path": "/",
      "description": "Get the main form"
    },
    "submit": {
      "method": "POST",
      "path": "/submit",
      "description": "Submit user data"
    },
    "success": {
      "method": "GET",
      "path": "/success",
      "description": "Success page"
    },
    "api": {
      "method": "GET",
      "path": "/api",
      "description": "Get API information"
    },
    "submittodoitem": {
      "method": "POST",
      "path": "/submittodoitem",
      "description": "Submit a to-do item"
    }
  }
}
